<div class="container">
  <div class="row d-flex justify-content-between">
    <h1>Surveys</h1>
    <a class="btn btn-success my-auto" href="#_">Add Survey</a>
  </div>
  <div class="row d-flex justify-content-start">
    <p class="text-muted">Show Surveys: </p>
    <div class="dropdown mx-2 mb-2">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
        Select
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to "Expired", display_surveys_home_index_path(filter_by: 'expiry'), class: "dropdown-item" %>
        <%= link_to "Active", display_surveys_home_index_path(filter_by: 'active'), class: "dropdown-item" %>
        <%= link_to "All", display_surveys_home_index_path(filter_by: 'all'), class: "dropdown-item" %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Description</th>
          <th scope="col">Category</th>
          <th scope="col">Created By</th>
          <th scope="col">Created on</th>
          <th scope="col">Expiry</th>
        </tr>
      </thead>
      <tbody>
        <% @surveys.each_with_index do |survey, index| %>
          <tr>
            <th scope="row"><%= index+1 %></th>
            <td><%= survey.name %></td>
            <td><%= survey.description %></td>
            <td><%= survey.category %></td>
            <td><%= survey.user.full_name %></td>
            <td><%= survey.created_at.to_s(:long) %></td>
            <td><%= survey.expiry.to_s(:long) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
    <h2 class="mb-5">Fill any survey from our wide collection</h2>
    <div class="dropdown mx-2 mb-2">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
        Select
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <%= link_to 'All', {controller: "home", action: "filter_category", filter_by: nil }, class: "dropdown-item", remote: true %>
        <% locals[:categories].each do |category| %>
          <%= link_to category, {controller: "home", action: "filter_category", filter_by: category }, class: "dropdown-item", remote: true %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% if locals[:surveys].blank? %>
        <h4 class="text-muted"> We will be adding public surveys soon! </h4>
      <% else %> 
        <% locals[:surveys].each do |survey| %>
          <div class="col-lg-4">
            <div class="mx-auto mt-4">
              <div class="card">
                <h5 class="card-header"> Survey Name <%= survey[:name] %> </h5>
                <div class="card-body">
                  <p class="card-text"> <%= survey[:description] %> </p>
                  <a href="#_" class="btn btn-primary">Fill it</a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="apple_pagination d-flex justify-content-center mt-4">
        <%= will_paginate locals[:surveys] %>
      </div>
    <% end %>
  </div>
<div id = "user-response">
  <%= form_for [@survey,@user_response] do |f| %>
    <%= f.hidden_field :survey_id, value: @survey.id %>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %></br>
    <% @survey.questions.each_with_index do |val , index| %>
      <%= f.fields_for :answers do |answer| %>
      <%= answer.hidden_field :question_id, value: val.id %>
        <br>
        <% if val.required %>
          <p class="font-weight-bold">Question <%= "#{index+1} : #{val.statement} *" %></p>
        <% else %>
          <p class="font-weight-bold">Question <%= "#{index+1} : #{val.statement}" %></p>
        <% end %>
          <% val.options.each_with_index do |option_value, option_index| %>
            <% if (val.checkbox? ) %>
              <%= answer.check_box :option_id, {id: "user_response_answers_attributes_#{option_index}_option_id_#{option_value.id}", multiple: true}, "#{option_value.id}", false %>
              <%= answer.hidden_field :detail, value: option_value.detail %>
            <% elsif (val.radiobutton? ) %>
              <%= answer.radio_button(:option_id, option_value.id, required: val.required) %>
              <%= answer.hidden_field :detail, value: option_value.detail %>
            <% elsif (val.boolean?) %>
              <%= answer.radio_button(:option_id, option_value.id, required: val.required) %>
              <%= answer.hidden_field :detail, value: option_value.detail %>
            <% end %>
            <%= option_value.detail %>
            <br />
          <% end %>
          <% if (val.commentbox? ) %>
            <%= answer.text_area :detail, required: val.required %>
          <% end %>
      <% end %>
    <% end %>
    <div>
      <%= f.submit "Submit", class: "btn btn-primary mt-3"%>
    </div>
  <% end %> 
</div>
<h1><%= t('members_heading') %></h1>

<% if can? :create, User %>
  <%= link_to t('create_new_member_label'), new_member_path, class: 'btn btn-outline-secondary' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t('name') %></th>
      <th scope="col"><%= t('email') %></th>
      <th scope="col"><%= t('role') %></th>
      <th scope="col"><%= t('user_role') %></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each.with_index(1) do |member, index| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= member.full_name %></td>
        <td><%= member.email %></td>
        <td><%= member.role %></td>
        <td>
          <% if can? :update, member %>
            <%= link_to t('edit_link'), edit_member_path(member) %>
          <% end %>
          <% if can? :destroy, member %>
            <%= link_to t('delete_link'), member_path(member), method: :delete, data: { confirm: t('confirmation_message') } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  

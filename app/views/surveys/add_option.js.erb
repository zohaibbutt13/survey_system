var val = $("#survey_questions_attributes_0_question_type").val();
if (val == "Checkbox") {
  $('#statement_<%= params["question_id"] %>_option_container').append("<%= escape_javascript render(partial: 'options/checkbox') %>");
} 
else if (val == "Radio Buttons") {
  $('#statement_<%= params["question_id"] %>_option_container').append("<%= escape_javascript render(partial: 'options/radioBtn') %>");
}
else if (val == "Comment Box") {
  $('#statement_<%= params["question_id"] %>_option_container').append("<%= escape_javascript render(partial: 'options/commentbox') %>");
}
else if (val == "True / False") {
  $('#statement_<%= params["question_id"] %>_option_container').append("<%= escape_javascript render(partial: 'options/truefalse') %>");
}
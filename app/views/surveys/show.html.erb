<h1> <%= @survey.name %> </h1>

<div class = "jumbotron">
  
</div>

<div class="container">
  <h2><%= @survey.name %></h2>
  <br>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#home"><%= @survey.description %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#menu1">Responses</a>
    </li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div id="home" class="container tab-pane active"><br>
      <h3>Create Survey</h3>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
      <%= link_to 'Edit Survey', edit_survey_path(@survey) %>
      <%= link_to 'Delete', @survey, method: :delete, data: { confirm: 'Are you sure?' } %>
      <%= link_to 'Fill it', new_survey_user_response_path(@survey) %>
    </div>
    <div id="menu1" class="container tab-pane fade"><br>
      <h3>Responses</h3>
      <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
      <div id = "responses">
      </div>
      <a href = "#_" data-survey_id = "<%= @survey.id %>" id = "see_responses" class = "js-responses">See Responses</a>
    </div>
  </div>
</div>
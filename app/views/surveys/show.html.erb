<div class="container">
  <h2><%= @survey.name %></h2>
  <br>
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#home">Survey</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#menu1">Responses</a>
    </li>
  </ul>

  <div class="tab-content container">
    <div id="home" class="container tab-pane active"><br>
      <h2>Survey Preview</h2>
      <div class= "text-left survey-box container shadow p-3 mb-5 bg-white rounded">
        <% @survey.questions.each_with_index do |val , index| %>
          <br>
          <% if val.required %>
            <p class="font-weight-bold">Question <%= "#{index+1} : #{val.statement} *" %></p>
          <% else %>
            <p class="font-weight-bold">Question <%= "#{index+1} : #{val.statement}" %></p>
          <% end %>
          <% val.options.each_with_index do |option_value, option_index| %>
            <% if val.checkbox? %>
                <%= check_box_tag :option, 1, false, disabled: true %>
            <% elsif val.radiobutton? %>
                <%= radio_button_tag "", nil, false, class: '', disabled: true %>
            <% elsif val.boolean? %>
               <%= radio_button_tag "", nil, false, class: '', disabled: true %>
            <% end %>
            <%= option_value.detail %><br>
          <% end %>
          <% if val.commentbox? %>
            <%= text_field_tag :option, "", class: '', readonly: true %>
          <% end %>
        <% end %>
        <br>
        <%= link_to 'Edit Survey', edit_survey_path(@survey) %><br>
        <%= link_to 'Delete', @survey, method: :delete, data: { confirm: 'Are you sure?' } %><br>
         <%= link_to 'Fill it', new_survey_user_response_path(@survey) %>
      </div>
    </div>
    <div id="menu1" class="container tab-pane fade"><br>
      <h3>Responses</h3>
      <div id = "responses">
      </div>
      <a href = "#_" data-survey_id = "<%= @survey.id %>" id = "see_responses" class = "js-responses">See Responses</a>
    </div>
  </div>
</div>
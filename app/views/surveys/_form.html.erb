<div>
  <div >
    <%= form_for @survey, id: "form" do |f| %>
      <%= render "devise/shared/error_messages", resource: @survey %>
      <label> Name of Survey: </label>
      <%= f.text_field :name %>
      <label> Description of Survey: </label>
      <%= f.text_field :description %></br>
      <label> Category of Survey: </label>
      <%= f.text_field :category %></br>
      <label> Type of Survey: </label>
      <%= f.select :survey_type , raw("<option>Private</option><option>Public</option>")%>  
      <label> Expiry of Survey: </label>
      <%= f.date_field :expiry %></br>
      <label> Question Type: </label>
      <%= f.fields_for :questions, id: '' do |q| %>
          <div id = "survey_questions">
            <div id = "statement_0" class="form-group">
              <%= q.select :question_type, raw("<option>Checkbox</option><option>Radio Buttons</option>
              <option>Comment Box</option><option>True / False</option>") %>
              <label> Statement: </label>
              <%= q.text_field :statement %>
              <div id = "statement_0_option_container" >
            </div>
            <a href = "#_" data-qid = "0" data-oid = "-1" class = "js-addoption">Add Option </a>
          </div>
        </div>
        <a href = "#_" data-count = "0" class = "js-addquestion">Add Question </a>
      <% end %>
      <%= f.submit "Submit" %>
    <% end %>    
  </div>  
</div>
$('#survey_questions').append("<%= escape_javascript render(:partial => 'surveys/question') %>");
var val = $("#qtype_dropdown").val();
if (val == "Checkbox") {
  $('#statement_<%= params["question_count"] %>_option_container').append("<%= escape_javascript render(:partial => 'surveys/checkbox') %>");
} 
else if (val == "Radio Buttons") {
  $('#statement_<%= params["question_count"] %>_option_container').append("<%= escape_javascript render(:partial => 'surveys/radioBtn') %>");
}
else if (val == "Comment Box") {
  $('#statement_<%= params["question_count"] %>_option_container').append("<%= escape_javascript render(:partial => 'surveys/commentbox') %>");
}
else if (val == "True / False") {
  $('#statement_<%= params["question_count"] %>_option_container').append("<%= escape_javascript render(:partial => 'surveys/truefalse') %>");
}
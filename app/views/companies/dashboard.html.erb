<div class="container-fluid">
  <% if @user_setting.show_graphs? %>
    <div id="graphs">
      <div class="d-flex justify-content-center heading-bg mb-2">
        <h1><%= t 'dashboard.graphs_label' %></h1>
      </div>
      <%= render partial: 'layouts/main_charts', locals: { stats_data: @surveys_stats, stats_labels: @surveys_stats_labels, latest_surveys_labels: @latest_surveys_labels, latest_surveys: @latest_surveys_responses_count } %>
    </div>
  <% end %>
  <% if @user_setting.show_history? %>
    <div id="histroy" class="p-t-20">
      <div class="d-flex justify-content-center heading-bg mb-2">
        <h1><%= t 'dashboard.history_label' %></h1>
      </div>
      <%= render partial: 'layouts/activity_history', locals: { user_activities: @activities } %>
    </div>
  <% end %>
</div>
<div class = "container">
  <h1>Welcome to your company <%= get_subdomain %></h1>
  <ul class = "mt-4">
    <% if can? :read, User %>
      <%= link_to members_path do %>
        <li>Employees</li>
      <% end %>
    <% end %>
    <% if can? :read, Group %>
      <%= link_to groups_path do %>
        <li>Groups</li>
      <% end %>
    <% end %>
    <% if can? :create, Survey %>
      <%= link_to new_survey_path do %>
        <li>Create Survey</li>
      <% end %>
    <% end %>
  </ul>
</div>
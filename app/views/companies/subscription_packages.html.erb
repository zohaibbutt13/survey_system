<!-- Packages -->
<section class="packages text-center bg-light">
  <div class="container">
    <h3>Your current package is: <%= current_user.company.subscription_package.subscription_package_name %></h3>
    <h2 class="mb-5">Choose from one of our best packages</h2>
    <div class="row">
      <% @subscription_packages.each do |subscription_package| %>
        <%= render 'layouts/package', subscription_package: subscription_package %>
      <% end %>
    </div>
  </div>
</section>
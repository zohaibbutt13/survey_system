<div>
  <div class="d-flex justify-content-center heading-bg mb-2">
    <h1><%= t('public_surveys.surveys_label') %></h1>
  </div>
  
  <div class="row no-gutters justify-content-between">
    <div class="dropdown">
      <button class="secondary-btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
        <%= t('public_surveys.filter_label') %>
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a href="#_" class="dropdown-item" data-toggle="modal" data-target="#name_modal"><%= t('public_surveys.name_label') %></a>
        <a href="#_" class="dropdown-item" data-toggle="modal" data-target="#survey_type_modal"><%= t('public_surveys.type_label') %></a>
        <a href="#_" class="dropdown-item" data-toggle="modal" data-target="#expired_before_modal"><%= t('public_surveys.expired_before_label') %></a>
        <a href="#_" class="dropdown-item" data-toggle="modal" data-target="#created_on_modal"><%= t('public_surveys.created_on_label') %></a>
        <a href="#_" class="dropdown-item" data-toggle="modal" data-target="#created_by_modal"><%= t('public_surveys.created_by_label') %></a>
      </div>
    </div>
    <div class="col-2 mb-2">
      <% if can? :create, Survey %>
        <td><%= link_to t('surveys.new_survey_link'), new_survey_path, class: 'primary-btn' %></td>
      <% end %>
    </div>
  </div>

  <% if @surveys.size > 0 %>
    <%= render partial: 'shared/filters/name_filter' %>
    <%= render partial: 'shared/filters/survey_type_filter' %>
    <%= render partial: 'shared/filters/expired_before_filter' %>
    <%= render partial: 'shared/filters/created_on_filter' %>
    <%= render partial: 'shared/filters/created_by_filter', locals: { employees: @employees} %>  
  <% end %>
  
  <div id = "surveys_list">
    <%= render partial: 'list_surveys', locals: { surveys: @surveys} %>
  </div>
</div>
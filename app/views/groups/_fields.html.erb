<div class="col-10 p-3">
  <h2><%= locals[:heading] %></h2>

<%= form_for locals[:group] do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label' %><br />
    <%= f.text_field :name, class: 'col-md-2 form-control', autofocus: true, autocomplete: 'name' %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'control-label' %><br />
    <%= f.text_area :description, class: 'col-md-2 form-control', autofocus: true, autocomplete: 'description' %>
  </div>

  <div>
    <%= f.label :members, class: 'control-label' %><br />
    <%= f.collection_select :user_ids, locals[:employees], :id, :full_name, {}, { multiple: true, class: 'col-md-4 form-control'} %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit locals[:submit], class: 'primary-btn' %>
  </div>
<% end %>
<div class="col-10 p-3">
  <h2><%= locals[:heading] %></h2>

  <%= form_for locals[:group] do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="form-group">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, class: 'form-control', autocomplete: "description" %>
    </div>

    <div>
      <table>
        <%= f.collection_check_boxes(:user_ids, locals[:employees], :id, :full_name) do |b| %>
          <tr>
            <td><%= b.label %></td>
            <td><%= b.check_box %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="actions">
      <%= f.submit locals[:submit] %>
    </div>
  <% end %>
</div>

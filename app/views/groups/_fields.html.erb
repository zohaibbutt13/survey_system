<h2><%= locals[:heading] %></h2>

<%= form_for locals[:group] do |f| %>
  <div class='label-input-container'>
    <div class='label-input-item'>
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: 'name' %>
    </div>

    <div class='label-input-item'>
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, autocomplete: 'description' %>
    </div>

    <div class='label-input-item'>
      <%= f.label :members %><br />
      <%= f.collection_select :user_ids, locals[:employees], :id, :full_name, {}, { multiple: true, class: 'col-md-3'} %>
    </div>

    <div class='label-input-item'>
      <%= f.submit locals[:submit], class: 'primary-btn' %>
    </div>
  </div>
<% end %>

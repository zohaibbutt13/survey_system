<h1><%= t('groups.group_index_heading') %></h1>

<% if can? :create, Group %>
  <div class="row no-gutters justify-content-end">
    <div class="col-1">
      <td><%= link_to t('links.add_new_link'), new_group_path, class: 'primary-btn' %></td>
    </div>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t('groups.name') %></th>
      <th scope="col"><%= t('groups.description') %></th>
      <th scope="col"><%= t('groups.options') %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each.with_index(1) do |group, index| %>
      <tr>
        <th scope="row"><%= index %></th>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td>
          <% if can? :update, group %>
            <%= link_to t('links.edit_link'), edit_group_path(group) %>
          <% end %>
          <% if can? :destroy, group %>
            <%= link_to t('links.delete_link'), group, method: :delete, data: { confirm: t('links.confirmation_message') } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
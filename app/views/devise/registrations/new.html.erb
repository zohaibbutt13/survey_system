<%= render partial:'layouts/header' %>
<div class="row">
  <div class="col-sm-6 p-20" >
    <%= render partial:'layouts/flash_messages' %>
    <div class="d-flex justify-content-center">
      <h1>Sign Up</h1>
    </div>

    <div class="p-l-30">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <%= f.fields_for :company do |builder| %>
          <div class = "input-label-container mt-4">
            <div class="label-input-item">
              <%= builder.label t(:company_name_label), for: "user_company_attributes_name" %>
              <%= builder.text_field :name, class: 'form-control' %>
            </div>
          </div>
          <div class = "input-label-container mt-4">
            <div class="label-input-item">
              <%= builder.label t(:company_subdomain_label), for: "user_company_attributes_subdomain" %>
              <%= builder.text_field :subdomain, class: 'form-control' %>
            </div>
          </div>
        <% end %>

        <div class = "input-label-container mt-4">
          <div class="label-input-item">
            <label for="user_first_name"><%= t(:first_name_label) %></label>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>

        <div class = "input-label-container mt-4">
          <div class="label-input-item">
            <label for="user_last_name"><%= t(:last_name_label) %></label>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>

        <div class = "input-label-container mt-4">
          <div class="label-input-item">
            <label for="user_email"><%= t(:email_label) %></label>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class = "input-label-container mt-4">
          <div class="label-input-item">
            <label for="user_password"><%= t(:password_label) %></label>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            <% if @validatable %>
              <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
            <% end %>
          </div>
        </div>

        <div class = "input-label-container mt-4">
          <div class="label-input-item">
            <label for="user_password_confirmation"><%= t(:password_confirmation_label) %></label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
          </div>
        </div>

        <div class = "input-label-container mt-4">
          <div class="label-input-item">
            <label><%= t(:image_label) %></label><br>
            <%= f.file_field :image, autocomplete: "off" %>
          </div>
        </div>

        <div class = "input-label-container my-4">
          <div class="actions">
          <%= f.submit t(:sign_up_label) , class: 'primary-btn w-100' %>
          </div>
        </div>
      <% end %>
      <div class = "input-label-container">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <%= render partial:'layouts/footer' %>
  </div>
  <div class="col-sm-6" >
    <img src="/assets/survey.jpeg" class = "img-fullsize"  alt="survey">
  </div>
</div>
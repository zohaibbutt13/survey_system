<%= render partial:'layouts/header' %>
<div class="row">
  <div class="col-sm-6" >
    <%= render partial:'layouts/flash_messages' %>
    <%= render_breadcrumbs :separator => ' / ' %>
    <h1 class = "header">Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <%= f.fields_for :company do |builder| %>
        <div class = "input-label-container">
          <div class="form-group">
            <%= builder.label 'Company Name:' %>
            <%= builder.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class = "input-label-container">
          <div class="form-group">
            <%= builder.label 'Company Subdomain:' %>
            <%= builder.text_field :subdomain, class: 'form-control' %>
          </div>
        </div>
      <% end %>

      <div class = "input-label-container">
        <div class="form-group">
          <label> First Name: </label>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>

      <div class = "input-label-container">
        <div class="form-group">
          <label> Last Name: </label>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>

      <div class = "input-label-container">
        <div class="form-group">
          <label> Email: </label>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class = "input-label-container">
        <div class="form-group">
          <label> Password: </label>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <% if @validatable %>
            <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
          <% end %>
        </div>
      </div>

      <div class = "input-label-container">
        <div class="form-group">
          <label>Password_confirmation: </label>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

      <div class = "input-label-container">
        <div class="form-group">
          <label>Image: </label><br>
          <%= f.file_field :image, autocomplete: "off" %>
        </div>
      </div>

      <div class = "input-label-container signup-button mb-2">
        <div class="actions">
        <%= f.submit "Sign up" , class: 'btn btn-primary w-100' %>
        </div>
      </div>
    <% end %>
    <div class = "input-label-container">
      <%= render "devise/shared/links" %>
    </div>
    <%= render partial:'layouts/footer' %>
  </div>
  <div class="col-sm-6" >
    <img src="/assets/survey.jpeg" class = "img-fullsize"  alt="survey">
  </div>
</div>
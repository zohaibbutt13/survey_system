<div class="row no-gutters">
  <div class="col"></div>
  <div class="col-8 col-md-6 content-window p-20">
    <h2><%= t(:change_password_label) %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class='label-input-container p-t-20'>
        <div class="label-input-item row no-gutters">
          <%= f.label :password, t(:new_password_label), class: "col-4" %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "col-8" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
        </div>
        <div class="label-input-item row no-gutters">
          <%= f.label :password_confirmation, t(:confirm_new_pass_label), class: "col-4" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-8" %>
        </div>
        <div class="label-input-item row no-gutters float-right">
          <%= f.submit t(:change_password_label), class: 'primary-btn' %>
        </div>
      </div>
    <% end %>
    <div class="p-t-20">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col"></div>
</div>

<%= render partial:'layouts/footer' %>
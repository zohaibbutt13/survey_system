<!-- Navigation -->
<nav class="navbar navbar-light bg-light static-top">
  <div class="container">
    <% if get_current_user? %>
      <a class="navbar-brand" href= <%= dashboard_company_path(current_user) %> >Surveys System</a>
      <div>
        <%= t 'header.logged_in_role_description' %>
        <%= current_user.role %>
      </div>
      <div class="d-flex flex-row-reverse">
        <div class="dropdown">
          <button type="button" class="btn btn-primary dropdown-toggle m-1" data-toggle="dropdown">
            <%= image_tag current_user.image.url(:thumb), class: 'zoom' %>
            <%= full_name %>
          </button>
          <div class="dropdown-menu">
            <%= link_to(t('header.log_out_label'), destroy_user_session_path, method: :delete) %>
          </div>
        </div>
        <div class="dropdown">
          <button type="button" class="btn btn-primary dropdown-toggle m-1" data-toggle="dropdown">
          <span data-feather="settings"></span>    
          </button>
          <div class="dropdown-menu">
            <% if can? :manage, @user_setting %>
              <%= link_to t('header.my_settings_label'), edit_user_setting_path(current_user.user_setting) %><br>
            <% end %>
            <% if can? :manage, @company_setting %>
              <%= link_to t('header.company_settings_label'), edit_company_setting_path(current_user.company.company_setting) %>
            <% end %>
          </div>
        </div>
      </div>
    <% else %>  
      <a class="navbar-brand" href="/"><%= t 'surveys_system_label' %></a>
      <div class="d-flex flex-row-reverse text-muted">
        <a class="btn btn-primary" href="/users/sign_up"><%= t 'header.register_label' %></a>
        <a class="nav-link" href="/users/sign_in"><%= t 'header.sign_in_label' %></a>
      </div> 
    <% end %>
  </div>
</nav>
<!-- Icons -->
<script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
<script>
  feather.replace();
</script>
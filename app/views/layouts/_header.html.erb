<!-- Navigation -->
<nav class="navbar navbar-dark sticky-top custom-navbar">
  <% if current_user.present? %>
    <a class="navbar-brand" href="<%= dashboard_company_path(current_user) %>">Survey System</a>
    <div class="d-flex flex-row-reverse">
      <div class="dropdown text-white d-flex align-items-center">
        <a data-toggle="dropdown">
          <b class="text-white"><%= full_name %></b> 
          <span class="badge badge-pill badge-secondary"><%= current_user.role %></span>
          <% if current_user.image_file_name.present? %>
            <%= image_tag current_user.image.url(:thumb), class: 'rounded-circle z-depth-0 mx-2' %>
          <% else %>
            <img src="/assets/icon.jpg" class= "rounded-circle z-depth-0 mx-2" />
          <% end %>
        </a>
        <div class="dropdown-menu">
          <%= link_to "My Dashboard", dashboard_company_path(current_user), class: "dropdown-item" %>
          <% if can? :edit, current_user.user_setting %>
            <%= link_to t('header.my_settings_label'), edit_user_setting_path(current_user.user_setting), class: "dropdown-item" %>
          <% end %>
          <% if can? :edit, @current_company.company_setting %>
            <%= link_to t('header.company_settings_label'), edit_company_setting_path(current_user.company.company_setting), class: "dropdown-item" %>
          <% end %>
          <% if can? :update, current_user %>
            <%= link_to t('header.my_profile_label'), edit_user_registration_path(current_user), class: "dropdown-item" %>
          <% end %>
          <% if current_user.admin? %>
              <%= link_to "Subscription Packages", subscription_packages_company_path(current_user), class: "dropdown-item" %>
            <% end %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </div>
      <div class="dropdown pr-2">
        <button type="button" data-user_id = "<%= current_user.id %>" class="btn btn-primary dropdown-toggle js-survey_count surveys-count" data-toggle="dropdown" id="pending_surveys">
          <i class="fa fa-bell"></i>
          <span id="survey_links" class="surveys-count-notification"></span>
        </button>
        <div id="surveys_detail" class="dropdown-menu">
        </div>
        </div>
      </div>
    </div>
  <% else %>  
    <div class="w-100 d-flex justify-content-between text-muted">
      <div>
        <a class="navbar-brand" href="\">Survey System</a>
      </div>
      <div class="d-flex justify-content-end">
        <% if @current_company.present? %>
          <%= link_to t('header.sign_in_label'), new_user_session_path, class: "nav-link" %>
        <% else %>
          <%= link_to t('header.register_label'), new_user_registration_path, class: "nav-link" %>
          <%= link_to t('header.sign_in_label'), sign_in_home_index_path, class: "nav-link" %>
        <% end %>
      </div>
    </div> 
  <% end %>
</nav>
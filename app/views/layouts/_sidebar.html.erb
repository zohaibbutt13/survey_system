<div class="container col-2">
  <div class="p-3">
    <nav class="d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
          <% get_sidebar_menu = sidebar_menu %>
          <% get_sidebar_menu.each do |content,value| %>
            <li class="nav-item">
              <i class="#_"></i>
              <%= link_to content, value[:url] %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</div>